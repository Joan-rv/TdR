#:kivy 1.9.0
MenuPantalla:

<MenuPantalla>:
    BoxLayout:
        orientation: "vertical"
        Button:
            text: "Entrenar intel·ligència"
            font_size: "30sp"
            on_press:
                root.manager.transition.direction = 'left'
                root.manager.current = 'entrenar'
        Button:
            text: "Provar intel·ligència"
            font_size: "30sp"
            on_press: 
                root.manager.transition.direction = 'left'
                root.manager.current = 'provar'

<EntrenarPantalla>:
    BoxLayout:
        orientation: "vertical"
        Button:
            size_hint: None, None
            size: dp(80), dp(40)
            text: "Enrere"
            disabled: root.no_pot_marxar
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        BoxLayout:
            orientation: "vertical"
            BoxLayout:
                size_hint: 1, 1.75
                orientation: "horizontal"
                Label:
                    text: root.informacio
                    font_size: "25sp"
                    halign: "center"
                BoxLayout:
                    size_hint: 0.4, 1
                    orientation: "vertical"
                    Button:
                        size_hint: 1, 2
                        text: root.text_boto
                        font_size: "20sp"
                        on_press: root.processa_entrenar()
            BoxLayout:
                orientation: "horizontal"
                Button:
                    text: "Guardar progrés"
                    font_size: "20sp"
                    on_press: root.guardar_progres()
                    disabled: root.no_pot_marxar
                Button:
                    text: "Recuperar progrés"
                    font_size: "20sp"
                    on_press: root.recuperar_progres()
                    disabled: root.no_pot_marxar

<ProvarPantalla>:
    BoxLayout:
        orientation: "vertical"
        Button:
            size_hint: None, None
            size: dp(80), dp(40)
            text: "Enrere"
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'menu'
        RelativeLayout:
            size_hint: None, None
            size: "280dp", "280dp"
            pos_hint: { "center_x": 0.5 }
            Pintar:
                id: canvas_pintar
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        size: self.size
        Label:
            text: root.prediccio
            font_size: "30sp"
        BoxLayout:
            orientation: "horizontal"
            spacing: "20dp"
            Button:
                size_hint: .2, 1
                text: "Borrar"
                font_size: "20sp"
                on_press: canvas_pintar.canvas.clear()
            Button:
                size_hint: .2, 1
                text: "Fer predicció"
                font_size: "20sp"
                on_press: root.prediu()

<BoxLayout>:
    spacing: "5dp"
    padding: "5dp"