BoxLayout:
    orientation: "vertical"
    Label:
        size_hint: 1, 0.1
        text: "Calculadora amb IA"
        font_size: "30sp"
    BoxLayout:
        orientation: "horizontal"
        RelativeLayout:
            size_hint: None, None
            size: "1140dp", "190dp"
            pos_hint: { "center_y": 0.5 }
            Pintar:
                id: canvas_pintar
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        size: self.size
                    Color:
                        rgba: 0, 0, 0, .5
                    Rectangle:
                        size: dp(10), dp(190)
                        pos: 185 + 0*190, 0 
                    Rectangle:
                        size: dp(10), dp(190)
                        pos: 185 + 1*190, 0 
                    Rectangle:
                        size: dp(10), dp(190)
                        pos: 185 + 2*190, 0 
                    Rectangle:
                        size: dp(10), dp(190)
                        pos: 185 + 3*190, 0 
                    Rectangle:
                        size: dp(10), dp(190)
                        pos: 185 + 4*190, 0 
        BoxLayout:
            size_hint: 0.2, 1
            orientation: "vertical"
            Button:
                text: "+"
            Button:
                text: "-"
            Button:
                text: "/"
            Button:
                text: "*"