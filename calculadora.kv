#:kivy 2.2
BoxLayout:
    orientation: "vertical"
    Label:
        size_hint: 1, 0.1
        text: "Calculadora amb IA"
        font_size: "30sp"
    RelativeLayout:
        size_hint: None, None
        size: "1190dp", "190dp"
        pos_hint: { "center_x": 0.5 }
        Pintar:
            id: canvas_pintar
            on_touch_up: app.imprimeix()
            canvas.before:
                Color:
                    rgba: 1, 1, 1, 1
                Rectangle:
                    size: self.size
                Color:
                    rgba: 0, 0, 0, .5
                Rectangle:
                    size: dp(10), dp(190)
                    pos: 190 + 0*200, 0 
                Rectangle:
                    size: dp(10), dp(190)
                    pos: 190 + 1*200, 0 
                Rectangle:
                    size: dp(10), dp(190)
                    pos: 190 + 2*200, 0 
                Rectangle:
                    size: dp(10), dp(190)
                    pos: 190 + 3*200, 0 
                Rectangle:
                    size: dp(10), dp(190)
                    pos: 190 + 4*200, 0 
    BoxLayout:
        orientation: "horizontal"
        Label:
            text: app.text
            font_size: "30sp"
        GridLayout:
            #size_hint: 0.1, 1
            rows: 7
            Button:
                text: "AC"
                on_press: app.ac()
            Button:
                text: "DEL"
                on_press: app.delete()
            Button:
                text: "+"
                on_press: app.suma()
            Button:
                text: "-"
                on_press: app.resta()
            Button:
                text: "*"
                on_press: app.multiplica()
            Button:
                text: "/"
                on_press: app.divideix()
            Button:
                text: "^"
                on_press: app.elevar()
            Button:
                text: "sqrt("
                on_press: app.arrel()
            Button:
                text: "("
                on_press: app.obre_paren()
            Button:
                text: ")"
                on_press: app.tanca_paren()
            Button:
                text: "sin("
                on_press: app.sin()
            Button:
                text: "cos("
                on_press: app.cos()
            Button:
                text: "tan("
                on_press: app.tan()
            Button:
                text: "pi"
                on_press: app.pi()
            Button:
                text: "="
                on_press: app.igual()
